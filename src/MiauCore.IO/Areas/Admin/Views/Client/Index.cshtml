@model MiauCore.IO.Areas.Admin.Models.ClientViewModel

@{
    ViewBag.Title = "Client - List";
}

<main role="main" class="col-md-6 col-md-offset-3">
    <h1>Clients</h1>
    
    <form asp-area="Admin" asp-controller="Client" asp-action="Index" method="get">
        <h3>Search</h3>
        Id<input asp-for="Filter.Id" type="text" />
        Name<input asp-for="Filter.Name" type="text" />
        Telephone<input asp-for="Filter.Telephone" type="text" />
        Email<input asp-for="Filter.Email" type="text" />
        TaxId<input asp-for="Filter.TaxId" type="text" />
        <input class="btn btn-primary" type="submit" value="Search"/>
    </form>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Telephone</th>
                <th>Email</th>
                <th>TaxId</th>
                <th>Rate</th>
                <th>MobilePhone</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var client in Model.Clients)
            {
                <tr>
                    <td>@client.Id</td>
                    <td>@client.Name</td>
                    <td>@client.Telephone</td>
                    <td>@client.Email</td>
                    <td>@client.TaxId</td>
                    <td>@client.Rate</td>
                    <td>@client.MobilePhone</td>
                </tr>
            }
        </tbody>
    </table>
</main>
