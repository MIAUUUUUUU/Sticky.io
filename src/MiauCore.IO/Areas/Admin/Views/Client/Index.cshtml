@model MiauCore.IO.Areas.Admin.Models.ClientViewModel

@{
    ViewBag.Title = "Client - List";
}
<form class="col-md-6 col-md-offset-3" asp-area="Admin" asp-controller="Client" asp-action="Index" method="get">
  <h1>Clients</h1>
  <h2>Search Filters</h2>
  <div class="form-group">
    <label>Name</label>
    <input class="form-control" asp-for="Filter.Name" type="text" />
  </div>
  <button class="dropdown-toggle btn" type="button" data-toggle="collapse" data-target="#advanced-filters">Advanced Filters</button>
  <div id="advanced-filters" class="collapse">
    <div class="form-group">
      <label>Id</label>
      <input class="form-control" asp-for="Filter.Id" type="text" />
    </div>
    <div class="form-group">
      <label>Telephone</label>
      <input class="form-control" asp-for="Filter.Telephone" type="text" />
    </div>
    <div class="form-group">
      <label>Email</label>
      <input class="form-control" asp-for="Filter.Email" type="text" />
    </div>
    <div class="form-group">
      <label>Tax Id</label>
      <input class="form-control" asp-for="Filter.TaxId" type="text" />
    </div>
  </div>
  <input class="btn btn-primary" type="submit" value="Search" />
</form>

<div class="col-md-8 col-md-offset-2 gap-top-lg">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Telephone</th>
        <th>Email</th>
        <th>TaxId</th>
        <th>Rate</th>
        <th>MobilePhone</th>
      </tr>
    </thead>
    <tbody>
      @foreach (var client in Model.Clients)
      {
        <tr>
          <td>@client.Id</td>
          <td>@client.Name</td>
          <td>@client.Telephone</td>
          <td>@client.Email</td>
          <td>@client.TaxId</td>
          <td>@client.Rate</td>
          <td>@client.MobilePhone</td>
        </tr>
      }
    </tbody>
  </table>
</div>
