@model MiauCore.IO.Areas.Admin.ViewModels.LoginViewModel

@{
    ViewBag.Title = "Account - Register";
}

<form id="form-register" class="col-md-6 col-md-offset-3 gap-top-x-lg" asp-controller="Admin/Account/Register" method="post">
  <h1>Register</h1>
  <div class="form-group">
    <label asp-for="User.Login"></label>
    <input id="username" asp-for="User.Login" class="form-control" type="text" />
  </div>
  <div class="form-group">
    <label asp-for="User.Email"></label>
    <input id="email" asp-for="User.Email" class="form-control" type="text" />
  </div>
  <div class="form-group">
    <label asp-for="User.Password">Password</label>
    <input id="password" asp-for="User.Password" class="form-control" type="password" />
  </div>
  <input id="do-register" class="btn btn-primary" type="submit" value="Login" />
  <div id="errors" class="alert alert-danger gap-top-md">
    @if (Model != null && Model.IdentityErrors != null)
    {
      foreach (var error in Model.IdentityErrors)
      {
        <p>@error.Description</p>
      }
    }
  </div>
</form>

@section scripts {
  <script asp-src-include="~/js/register.js"></script>
}

