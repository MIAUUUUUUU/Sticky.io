@model MiauCore.IO.Areas.Admin.ViewModels.LoginViewModel

@using (Html.BeginForm("Register", "Account", FormMethod.Post))
{
    @Html.DisplayNameFor(m => m.User.Login)
    @Html.TextBoxFor(m => m.User.Login)
    @Html.DisplayNameFor(m => m.User.Email)
    @Html.TextBoxFor(m => m.User.Email)
    @Html.DisplayNameFor(m => m.User.Password)
    @Html.PasswordFor(m => m.User.Password)
    <input type="submit" value="Sign Up">
}

@if (Model != null && Model.IdentityErrors != null)
{
    foreach (var error in Model.IdentityErrors)
    {
        <h1 style="color: red;">@error.Description</h1>
    }
}

