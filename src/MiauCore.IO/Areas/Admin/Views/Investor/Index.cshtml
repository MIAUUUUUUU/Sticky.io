@model MiauCore.IO.Areas.Admin.Models.InvestorViewModel

@{
  ViewBag.Title = "Client - List";
}

<form class="col-md-6 col-md-offset-3" asp-area="Admin" asp-controller="Investor" asp-action="Index" method="get">
  <h1>Investors</h1>
  <h2>Search Filters</h2>

  <div class="form-group">
    <label>Name (Company)</label>
    <input class="form-control" asp-for="Filter.Company" type="text" />
  </div>

  <button class="dropdown-toggle btn" type="button" data-toggle="collapse" data-target="#advanced-filters">Advanced Filters</button>
  <div id="advanced-filters" class="collapse">
    <div class="form-group">
      <label>Id</label>
      <input class="form-control" asp-for="Filter.Id" type="text" />
    </div>
    <div class="form-group">
      <label>Telephone</label>
      <input class="form-control" asp-for="Filter.Telephone" type="text" />
    </div>
    <div class="form-group">
      <label>Email</label>
      <input class="form-control" asp-for="Filter.Email" type="text" />
    </div>
    <div class="form-group">
      <label>Address</label>
      <input class="form-control" asp-for="Filter.Address" type="text" />
    </div>
    <div class="form-group">
      <label>NERC</label>
      <input class="form-control" asp-for="Filter.NERC" type="text" />
    </div>
  </div>

  <input class="btn btn-primary" type="submit" value="Search" />
</form>

<div class="col-md-8 col-md-offset-2 gap-top-lg">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Id</th>
        <th>Company</th>
        <th>Telephone</th>
        <th>Email</th>
        <th>Address</th>
        <th>NERC</th>
      </tr>
    </thead>
    <tbody>
      @foreach (var investor in Model.Investors)
      {
          <tr>
            <td>@investor.Id</td>
            <td>@investor.Company</td>
            <td>@investor.Telephone</td>
            <td>@investor.Email</td>
            <td>@investor.Address</td>
            <td>@investor.NERC</td>
          </tr>
      }
    </tbody>
  </table>
</div>
