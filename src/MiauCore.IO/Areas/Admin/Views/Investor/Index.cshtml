@model MiauCore.IO.Areas.Admin.Models.InvestorViewModel

@{
    ViewBag.Title = "Client - List";
}

<main role="main" class="col-md-6 col-md-offset-3">
    <h1>Investors</h1>

    <form asp-area="Admin" asp-controller="Investor" asp-action="Index" method="get">
        <h3>Search</h3>
        Id<input asp-for="Filter.Id" type="text" />
        Name<input asp-for="Filter.Company" type="text" />
        Telephone<input asp-for="Filter.Telephone" type="text" />
        Email<input asp-for="Filter.Email" type="text" />
        TaxId<input asp-for="Filter.Address" type="text" />
        NERC<input asp-for="Filter.NERC" type="text" />
        <input class="btn btn-primary" type="submit" value="Search" />
    </form>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Company</th>
                <th>Telephone</th>
                <th>Email</th>
                <th>Address</th>
                <th>NERC</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var investor in Model.Investors)
            {
                <tr>
                    <td>@investor.Id</td>
                    <td>@investor.Company</td>
                    <td>@investor.Telephone</td>
                    <td>@investor.Email</td>
                    <td>@investor.Address</td>
                    <td>@investor.NERC</td>
                </tr>
            }
        </tbody>
    </table>
</main>
