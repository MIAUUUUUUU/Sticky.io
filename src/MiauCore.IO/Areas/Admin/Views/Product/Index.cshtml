@model List<MiauCore.IO.Models.Product>

@{
    ViewBag.Title = "Products";
}

<main role="main" class="col-md-6 col-md-offset-3">
    <h1>Products</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Type</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Id</td>
                    <td>@product.Name</td>
                    <td>@product.Type</td>
                    <td><a class="btn btn-warning" href="/Product/Update?id=@product.Id">Able</a></td>
                    <td><a class="btn btn-danger" href="/Product/Delete?id=@product.Id">Able</a></td>
                </tr>
            }
        </tbody>
    </table>
</main>
